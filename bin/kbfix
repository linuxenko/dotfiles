#!/bin/sh

#bluetoothctl << EOF
#connect 20:73:AB:7E:AF:55
#EOF

#sleep 1
#
setxkbmap -layout "us,ru" -option "grp:alt_shift_toggle"
xmodmap -e 'clear Lock' -e 'keycode 66 = Control_L' \
  -e 'add Control = Control_L' \
  -e 'keycode 225 = Insert' \
  -e 'keycode 180 = Alt_L' \
  -e 'keycode 87 = Down' \
  -e 'keycode 88 = Up'
xmodmap ~/.Xmodmap